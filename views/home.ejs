
<%- include("partials/header.ejs") -%>
<div class="row">
  <div class="box button-box">
    <a class="btn btn-outline-primary button" button " href="/compose" role="button"><p class="button1"><i class="icon fas fa-pen-nib"></i> + Create New</p></a>
  </div>

<% posts.forEach((post) => { %>

    <div class="box">
      <h4 class="title"><%= post.title %></h4>
      <p class="content"><%= post.content.substring(0, 200) + " ..." %></p>
      <div class="buttons btn-toolbar">
        <form action="/delete" method="post">
          <button class="btn btn-outline-danger" name="deleteButton" value="<%=post._id%>">Delete</button>
          <a class="btn btn-outline-primary read" href="/posts/<%=post._id%>">Read More</a>
        </form>
        
      </div>
      </div>
      
  
<% }); %>
<% console.log(posts); %>
</div>
